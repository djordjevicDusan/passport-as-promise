{
  "name": "passport-as-promise",
  "version": "1.0.0",
  "author": "Dusan Djordjevic <theneura@live.com>",
  "description": "Wrap passport methods and returns them as a promise",
  "keywords": [
    "passport",
    "promisify-passport",
    "passport-promise"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/djordjevicDusan/passport-as-promise.git"
  },
  "scripts": {
    "build": "npx tsc --pretty",
    "clean": "rimraf lib",
    "start": "node ./dist/index.js",
    "dev": "nodemon ./src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn audit",
    "preversion": "yarn lint && yarn audit",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "dependencies": {
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "@types/passport": "^1.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.8.3"
  }
}